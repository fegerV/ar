# Vertex AR - Environment Variables Template
# Copy this file to .env and update with your values

# ============================================
# Application Settings
# ============================================

# Debug mode (set to False in production)
DEBUG=True

# Secret key for JWT tokens (generate a secure random key for production)
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-secure-random-key-in-production

# Application host and port
APP_HOST=0.0.0.0
APP_PORT=8000

# Base URL (used for generating AR URLs and QR codes)
BASE_URL=http://localhost:8000

# ============================================
# Database Settings
# ============================================

# SQLite database path (relative to application directory)
DATABASE_URL=sqlite:///./app_data.db

# For PostgreSQL (when migrating from SQLite):
# DATABASE_URL=postgresql://user:password@localhost:5432/vertex_ar

# ============================================
# Storage Settings
# ============================================

# Storage type: "local" or "minio"
STORAGE_TYPE=local

# Local storage path (relative to application directory)
STORAGE_PATH=./storage

# ============================================
# MinIO Settings (S3-compatible storage)
# ============================================

# MinIO endpoint (without http://)
# For local MinIO: localhost:9000
# For remote MinIO: minio.example.com:9000 or s3.amazonaws.com (for AWS S3)
MINIO_ENDPOINT=localhost:9000

# MinIO access credentials
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# MinIO bucket name
MINIO_BUCKET=vertex-ar

# Use secure connection (HTTPS) - set to True for production/remote MinIO
MINIO_SECURE=False

# Public URL for accessing files (optional, defaults to http(s)://MINIO_ENDPOINT)
# Use this if your MinIO is behind a proxy or has a different public URL
# Example: https://cdn.example.com or https://files.example.com
MINIO_PUBLIC_URL=

# ============================================
# File Upload Limits
# ============================================

# Maximum image size in MB
MAX_IMAGE_SIZE_MB=10

# Maximum video size in MB
MAX_VIDEO_SIZE_MB=50

# Allowed image formats (comma-separated)
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png

# Allowed video formats (comma-separated)
ALLOWED_VIDEO_FORMATS=mp4,webm

# ============================================
# NFT Marker Generation
# ============================================

# Feature density: low, medium, or high
NFT_FEATURE_DENSITY=high

# Number of pyramid levels (1-3)
NFT_PYRAMID_LEVELS=3

# Target DPI for marker generation
NFT_TARGET_DPI=150

# ============================================
# Logging
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log file path (leave empty to log to console only)
LOG_FILE=

# ============================================
# Security Settings
# ============================================

# CORS allowed origins (comma-separated, use * for development only)
CORS_ORIGINS=*

# Token expiration time in hours
TOKEN_EXPIRATION_HOURS=24

# Bcrypt password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# Default admin credentials (auto-seeded for admin panel access)
DEFAULT_ADMIN_USERNAME=superar
DEFAULT_ADMIN_PASSWORD=ffE48f0ns@HQ
DEFAULT_ADMIN_EMAIL=superar@vertex-ar.local
DEFAULT_ADMIN_FULL_NAME=Super Administrator

# ============================================
# Rate Limiting (future feature)
# ============================================

# Enable rate limiting
RATE_LIMIT_ENABLED=False

# Requests per minute for authenticated users
RATE_LIMIT_AUTH=100

# Requests per minute for unauthenticated users
RATE_LIMIT_ANON=20

# ============================================
# Telegram Notifications
# ============================================

# Telegram Bot Token (получить у @BotFather)
TELEGRAM_BOT_TOKEN=

# Telegram Chat ID (ваш chat ID или группы)
TELEGRAM_CHAT_ID=

# ============================================
# Email Notifications (future feature)
# ============================================

# SMTP server settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True

# Sender email
EMAIL_FROM=noreply@vertex-ar.com

# Admin notification email
ADMIN_EMAIL=admin@vertex-ar.com

# ============================================
# Redis (for caching and session storage)
# ============================================

# Redis URL (future feature)
REDIS_URL=redis://localhost:6379/0

# Redis password
REDIS_PASSWORD=

# ============================================
# Monitoring and Analytics
# ============================================

# Enable analytics
ANALYTICS_ENABLED=False

# Google Analytics ID
GA_TRACKING_ID=

# Sentry DSN for error tracking
SENTRY_DSN=

# ============================================
# Automated Backup Settings
# ============================================

# Enable database backup schedule
BACKUP_DATABASE_ENABLED=true

# Database backup schedule (cron format: minute hour day month weekday)
# Default: daily at 2:00 AM
BACKUP_DATABASE_SCHEDULE=0 2 * * *

# Enable storage backup schedule
BACKUP_STORAGE_ENABLED=false

# Storage backup schedule
# Default: weekly on Sunday at 3:00 AM
BACKUP_STORAGE_SCHEDULE=0 3 * * 0

# Enable full backup schedule
BACKUP_FULL_ENABLED=true

# Full backup schedule
# Default: weekly on Sunday at 3:00 AM
BACKUP_FULL_SCHEDULE=0 3 * * 0

# Enable backup rotation schedule
BACKUP_ROTATION_ENABLED=true

# Backup rotation schedule
# Default: daily at 4:00 AM
BACKUP_ROTATION_SCHEDULE=0 4 * * *

# Maximum number of backups to keep (rotation)
MAX_BACKUPS=7

# ============================================
# Video Animation Scheduler Settings
# ============================================

# Enable video animation scheduler
VIDEO_SCHEDULER_ENABLED=true

# Scheduler check interval in seconds (default: 300 = 5 minutes)
VIDEO_SCHEDULER_CHECK_INTERVAL=300

# Video rotation check interval in seconds (default: 3600 = 1 hour)
VIDEO_SCHEDULER_ROTATION_INTERVAL=3600

# Auto-archive videos after specified hours (default: 168 = 1 week)
VIDEO_SCHEDULER_ARCHIVE_AFTER_HOURS=168

# Enable scheduler notifications (Telegram/Email)
VIDEO_SCHEDULER_NOTIFICATIONS_ENABLED=true

# ============================================
# Development Settings
# ============================================

# Reload server on code changes (development only)
RELOAD=True

# Show detailed error pages
SHOW_ERROR_DETAILS=True

# ============================================
# Production Settings (uncomment for production)
# ============================================

# DEBUG=False
# SHOW_ERROR_DETAILS=False
# CORS_ORIGINS=https://yourdomain.com
# BASE_URL=https://yourdomain.com
# RATE_LIMIT_ENABLED=True
# ANALYTICS_ENABLED=True

# ============================================
# Notes
# ============================================

# 1. Never commit the .env file to version control
# 2. Generate a strong SECRET_KEY for production
# 3. Change default MINIO credentials in production
# 4. Enable HTTPS in production
# 5. Configure proper CORS_ORIGINS in production
# 6. Enable rate limiting in production
# 7. Set up proper logging and monitoring
# 8. Use PostgreSQL instead of SQLite for production
# 9. Use Redis for session storage in production
# 10. Regular backups of database and storage
