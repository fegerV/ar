# Vertex AR - Production Environment Configuration
# Copy this file to .env for production deployment with remote storage

# ============================================
# Application Settings
# ============================================

DEBUG=False
SECRET_KEY=CHANGE-THIS-TO-SECURE-RANDOM-KEY-IN-PRODUCTION
APP_HOST=0.0.0.0
APP_PORT=8000
BASE_URL=https://yourdomain.com

# ============================================
# Storage Settings - Remote MinIO
# ============================================

# Use MinIO for scalable storage
STORAGE_TYPE=minio

# ============================================
# Remote MinIO Configuration
# ============================================

# Option 1: Self-hosted MinIO on separate server
MINIO_ENDPOINT=minio.yourdomain.com:9000
MINIO_ACCESS_KEY=your-production-access-key
MINIO_SECRET_KEY=your-production-secret-key
MINIO_BUCKET=vertex-ar-production
MINIO_SECURE=True

# Public URL (if using CDN or reverse proxy)
MINIO_PUBLIC_URL=https://cdn.yourdomain.com

# Option 2: DigitalOcean Spaces
# MINIO_ENDPOINT=nyc3.digitaloceanspaces.com
# MINIO_ACCESS_KEY=your-do-spaces-key
# MINIO_SECRET_KEY=your-do-spaces-secret
# MINIO_BUCKET=vertex-ar-prod
# MINIO_SECURE=True
# MINIO_PUBLIC_URL=https://vertex-ar-prod.nyc3.cdn.digitaloceanspaces.com

# Option 3: Amazon S3
# MINIO_ENDPOINT=s3.amazonaws.com
# MINIO_ACCESS_KEY=your-aws-access-key-id
# MINIO_SECRET_KEY=your-aws-secret-access-key
# MINIO_BUCKET=vertex-ar-production
# MINIO_SECURE=True

# Option 4: Backblaze B2
# MINIO_ENDPOINT=s3.us-west-000.backblazeb2.com
# MINIO_ACCESS_KEY=your-b2-key-id
# MINIO_SECRET_KEY=your-b2-application-key
# MINIO_BUCKET=vertex-ar-prod
# MINIO_SECURE=True

# ============================================
# Security Settings
# ============================================

CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
TOKEN_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# ============================================
# Rate Limiting
# ============================================

RATE_LIMIT_ENABLED=True
RATE_LIMIT_AUTH=100
RATE_LIMIT_ANON=20

# ============================================
# Logging
# ============================================

LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/var/log/vertex-ar/app.log

# ============================================
# Monitoring
# ============================================

ANALYTICS_ENABLED=True
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
